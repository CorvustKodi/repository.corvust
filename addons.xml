<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<addon id="repository.corvust" name="Corvust Addons" provider-name="CorvustKodi" version="0.9.6">
		
    
		<extension name="Corvust Addons" point="xbmc.addon.repository">
			
        
			<info compressed="false">https://raw.githubusercontent.com/corvustkodi/repository.corvust/master/addons.xml</info>
			
        
			<checksum>https://raw.githubusercontent.com/corvustkodi/repository.corvust/master/addons.xml.md5</checksum>
			
        
			<datadir zip="true">https://raw.githubusercontent.com/corvustkodi/repository.corvust/master</datadir>
			
    
		</extension>
		
    
		<extension point="xbmc.addon.metadata">
			
        
			<summary>Kodi Addons by Corvust</summary>
			
        
			<description>This repository contains addons that are distributed for use in Corvust media centres.</description>
			
        
			<disclaimer>The owners and submitters to this repository assume no responsibility for damages, data-loss, or frustration caused by the use of these addons. Use at your own risk.</disclaimer>
			
        
			<platform>all</platform>
			
    
		</extension>
		

	</addon>
	<addon id="script.slurpee" name="Slurpee" provider-name="CorvustKodi" version="1.0.1">
		
  
		<requires>
			
    
			<import addon="xbmc.python" version="2.14.0"/>
			
    
			<import addon="script.module.requests" version="2.18.4"/>
			
    
			<import addon="script.module.beautifulsoup" version="3.2.1"/>
			
    
			<import addon="script.module.six" version="1.9.0"/>
			
  
		</requires>
		
  
		<extension library="default.py" point="xbmc.python.script"/>
		
  
		<extension library="service.py" point="xbmc.service" start="startup"/>
		
  
		<extension point="xbmc.addon.metadata">
			
    
			<summary lang="en">An interface to managing automatic episode downloads.</summary>
			
    
			<description lang="en">Provides a nice interface for setting up automatic downloads of your favourite legally availabe shows.</description>
			
    
			<platform>all</platform>
			
  
		</extension>
		
  
		<extension name="Corvust Addons" point="xbmc.addon.repository">
			
        
			<info compressed="false">https://raw.githubusercontent.com/corvustkodi/repository.corvust/master/addons.xml</info>
			
        
			<checksum>https://raw.githubusercontent.com/corvustkodi/repository.corvust/master/addons.xml.md5</checksum>
			
        
			<datadir zip="true">https://raw.githubusercontent.com/corvustkodi/repository.corvust/master</datadir>
			
  
		</extension>
		

	</addon>
</addons>
